<div class="container-fluid">
	<div class="row-fluid">
		<div class="span12">
			<h3 class="page-title">Categorias - listagem</h3>
			<ul class="breadcrumb">
				<li>
					<a href="/admin">Dashboard</a>
					<span class="divider">/</span>
				</li>				
				<li class="active">Categorias</li>				
			</ul>
		</div>
	</div>
	<div id="page-wraper">
		<div class="row-fluid">
	    	<div class="span12">
				<table class="datatable table table-hover table-striped">
					<thead>
						<tr>
							<th>#</th>
							<th>Descrição</th>
							<th>Ações</th>					
						</tr>
					</thead>

					<tbody>
						<% @categories.each do |category| %>
							<tr>
								<td><a href="/admin/categories/<%= category.id %>/edit"><%= category.id %></a></td>
								<td><%= category.description %></td>						
								<td></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>