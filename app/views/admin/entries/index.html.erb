<div class="container-fluid">
	<div class="row-fluid">
		<div class="span12">
			<h3 class="page-title">Palavras - listagem</h3>
			<ul class="breadcrumb">
				<li>
					<a href="/admin">Dashboard</a>
					<span class="divider">/</span>
				</li>				
				<li class="active">Palavras</li>				
			</ul>
		</div>
	</div>
	<div id="page-wraper">
		<div class="row-fluid">
	    	<div class="span12">
	    		<% if @entries %>
				<table class="datatable table table-hover table-striped">
					<thead>
						<tr>
							<th>#</th>
							<th>Palavra</th>
							<th>Descrição</th>
							<th>Descrição cômica</th>
							<th>Categoria</th>
							<th>Tags</th>
							<th>Ações</th>					
						</tr>
					</thead>

					<tbody>
						
							<% @entries.each do |entry| %>
								<tr>
									<td><a href="/admin/entries/<%= entry.id %>/edit"><%= entry.id %></td>
									<td><%= entry.entry %></td>
									<td><%= entry.description %></td>
									<td><%= entry.funny_description %></td>
									<td><%= entry.category.description %></td>
									<td>
										<% entry.tags.each do |tag| %>
											<%= tag.description %>
										<% end %>
									</td>
									<td></td>						
								</tr>
							<% end %>
					</tbody>
				</table>
				<% end %>
			</div>
		</div>	
	</div>
</div>