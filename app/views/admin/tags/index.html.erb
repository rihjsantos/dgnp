<div class="container-fluid">
	<div class="row-fluid">
		<div class="span12">
			<h3 class="page-title">Tags - listagem</h3>
			<ul class="breadcrumb">
				<li>
					<a href="/admin">Dashboard</a>
					<span class="divider">/</span>
				</li>				
				<li class="active">Tags</li>				
			</ul>
		</div>
	</div>
	<div id="page-wraper">
		<div class="row-fluid">
	    	<div class="span12">
				<table class="datatable table table-hover table-striped">
					<thead>
						<tr>
							<th>#</th>
							<th>Descrição</th>
							<th>Ações</th>					
						</tr>
					</thead>

					<tbody>
						<% @tags.each do |tag| %>
							<tr>
								<td><a href="/admin/tags/<%= tag.id %>/edit"><%= tag.id %></a></td>
								<td><%= tag.description %></td>						
								<td></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>